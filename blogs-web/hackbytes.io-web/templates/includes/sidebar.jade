  div.side
    div.skills
      div.nl-label.skills-label
        h3.side-label Skills
      ul.nl-label-list
        for skill in skills
          - var formattedSkill = skill.replace(/-/g, ' ')
          li.nl-label.skills-item-label
            a(href='/tag/#{ skill }/') #{ formattedSkill } &bull;
