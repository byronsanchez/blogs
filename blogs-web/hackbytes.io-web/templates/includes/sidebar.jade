div#nl-sidebar

  // About Me
  div.side
    div.about-me.clearfix
      img(src='https://www.gravatar.com/avatar/9277d1ec66f787e29b338f06c1ab87fd.png', title='niteLite\'s avatar', alt='niteLite\'s avatar', class='profile')
      include ../includes/about

    div.social-links.clearfix
      a(href='https://soundcloud.com/byronsanchez')
        div.soundcloud
          img(src='/img/soundcloud-icon.png', alt='soundcloud icon').social-icon
      a(href='https://www.youtube.com/channel/UCWcE6wQ6oM6ZXPtra2oxwWA')
        div.youtube
          img(src='/img/youtube-icon.png', alt='youtube icon').social-icon
      a(href='https://twitter.com/byronsanchez')
        div.twitter
          img(src='/img/twitter-icon.png', alt='twitter icon').social-icon
      a(href='https://www.facebook.com/ByronSanchezMusic/')
        div.facebook
          img(src='/img/facebook-icon.png', alt='facebook icon').social-icon

  // Email List
  div.side
    div.mailing-list.clearfix
      include ../includes/mailing-list

  if most_popular_articles
    div.side
      div.most-popular
        div.nl-label.popular-label
          h3.side-label Most Popular Entries
        ul.nl-label-list
          for link, title in most_popular_articles
            li.nl-label.popular-item-label
              a(href='#{ link }') #{ title } &bull;

  div.side
    div.ratings
      div.nl-label.ratings-label
        h3.side-label Ratings
      a(href='/tag/5-stars/')
        div.rating-five
          div.rating-wrapper
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-fill-inverse.png', class='rating-icon')
      a(href='/tag/4-stars/')
        div.rating-four
          div.rating-wrapper
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-empty-inverse.png', class='rating-icon')
      a(href='/tag/3-stars/')
        div.rating-three
          div.rating-wrapper
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-fill-inverse.png', class='rating-icon')
            img(src='/img/star-empty-inverse.png', class='rating-icon')
            img(src='/img/star-empty-inverse.png', class='rating-icon')
